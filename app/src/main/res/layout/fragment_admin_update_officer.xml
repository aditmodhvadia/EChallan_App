<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.e_challan.e_challan.AdminUpdateOfficerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/traffic_dark">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Update Officer Details"
            android:textColor="#fff"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

        <EditText
            android:id="@+id/updateOfficerAadhaarNoEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="#fff"
            android:background="@drawable/edittextstyle"
            android:padding="15dp"
            android:textColorHint="#fff"
            android:ems="10"
            android:hint="Aadhaar No to search"
            android:inputType="number" />

        <Button
            android:id="@+id/searchOfficerButton"
            android:layout_width="wrap_content"
            android:background="@drawable/buttonstyleselector"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:text="Search" />

        <TextView
            android:id="@+id/update_officer_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Details"
            android:textColor="#fff"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:visibility="gone" />

        <EditText
            android:id="@+id/officerFNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="#fff"
            android:background="@drawable/edittextstyle"
            android:padding="15dp"
            android:textColorHint="#fff"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:visibility="gone" />

        <EditText
            android:id="@+id/officerLNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="#fff"
            android:background="@drawable/edittextstyle"
            android:padding="15dp"
            android:textColorHint="#fff"
            android:ems="10"
            android:hint="Last Name"
            android:inputType="textPersonName"
            android:visibility="gone" />

        <EditText
            android:id="@+id/officerPhoneNoEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="Phone Number"
            android:textColor="#fff"
            android:background="@drawable/edittextstyle"
            android:padding="15dp"
            android:textColorHint="#fff"
            android:inputType="phone"
            android:visibility="gone" />

        <EditText
            android:id="@+id/officerDOBEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="#fff"
            android:background="@drawable/edittextstyle"
            android:padding="15dp"
            android:textColorHint="#fff"
            android:ems="10"
            android:hint="DOB(DD/MM/YYYY)"
            android:inputType="date"
            android:visibility="gone" />

        <EditText
            android:id="@+id/officerAddressEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:background="@drawable/edittextstyle"
            android:padding="15dp"
            android:textColorHint="#fff"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="Address"
            android:inputType="textPostalAddress"
            android:visibility="gone" />

        <Button
            android:id="@+id/officerUpdateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/buttonstyleselector"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:text="Update Details"
            android:visibility="gone" />
    </LinearLayout>

</ScrollView>
